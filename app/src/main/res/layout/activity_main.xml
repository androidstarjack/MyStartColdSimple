<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yyh.cold"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yyh.cold.MainActivity">

    <com.yyh.cold.HeartMapView
        app:lineColor="@color/green"
        app:bgColor="@color/black"
        app:frameColor="@color/white"
        app:gridviewColor="@color/yello_deep"
        android:id="@+id/hmv_hreat"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <com.yyh.cold.HeartRateGraphView
        android:id="@+id/hrap"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
</LinearLayout>
